<p style="color: green"><%= notice %></p>

<h1>Todos</h1>

<%= turbo_stream_from "todos" %>
<%= turbo_frame_tag "todos" do %>
  <% @todos.each do |todo| %>
    <%= render todo %>
  <% end %>
<% end %>

<%= turbo_frame_tag "todo_form" do %>
  <%= link_to "New todo", new_todo_path %>
<% end %>

<p>Page loaded at <%= DateTime.now.strftime("%m/%d/%Y, %H:%M:%S") %></p>
